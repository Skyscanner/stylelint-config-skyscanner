{
  "name": "@skyscanner/stylelint-config-skyscanner",
  "version": "9.0.0",
  "description": "Skyscanner's stylelint config.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.9.0",
    "npm": ">=10.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Skyscanner/stylelint-config-skyscanner"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "keywords": [
    "stylelint",
    "scss",
    "javascript",
    "skyscanner"
  ],
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "!(LICENSE)*.md": [
      "npm run spellcheck",
      "prettier --write"
    ],
    "**/!(package|package-lock).json": "prettier --write",
    "**/*.yml": "prettier --write",
    "*.js": "npm run lint:fix"
  },
  "dependencies": {
    "@skyscanner/eslint-config-skyscanner": "^22.5.0",
    "@skyscanner/stylelint-plugin-backpack": "^4.0.0",
    "stylelint": "^17.1.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.12.1"
  },
  "devDependencies": {
    "husky": "^9.1.5",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.0"
  }
}
